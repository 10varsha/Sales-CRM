# Backend environment example
# Copy to .env and adjust values for your environment.

# Runtime
NODE_ENV=development
PORT=3005

# Database (local synthetic DB from root docker-compose)
# Dev: postgres://dev:dev@localhost:5438/app_dev
# Test: postgres://test:test@localhost:5439/app_test
DATABASE_URL=postgres://dev:dev@localhost:5438/app_dev

# JWT secrets (use long, random strings in real envs)
JWT_ACCESS_SECRET=change-me-access-secret-32+chars
JWT_REFRESH_SECRET=change-me-refresh-secret-32+chars

# Token lifetimes
ACCESS_TOKEN_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# Prisma options
LOG_PRISMA_QUERIES=false

# Cache middleware (in-memory; single-node only)
CACHE_TTL_MS=30000
CACHE_MAX=1000

# Prisma Optimize (optional)
# If you use @prisma/extension-optimize, set the API key here.
OPTIMIZE_API_KEY=

# Observability (optional)
# NEW_RELIC_LICENSE_KEY=
# NEW_RELIC_APP_NAME=SalesCRM-Backend

# CORS (optional, if you add validation)
# CORS_ALLOWED_ORIGINS=http://localhost:5173

